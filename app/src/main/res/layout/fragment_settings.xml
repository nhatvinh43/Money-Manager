<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@color/black">



       <TextView
           android:id="@+id/accountTitle"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:fontFamily="sans-serif-light"
           android:textSize="30sp"
           android:text="@string/settings"
           android:textColor="@color/white"
           android:layout_marginTop="70dp"
           android:layout_marginStart="20dp"/>
       <LinearLayout
           android:paddingHorizontal="30dp"
           android:id="@+id/dataRow"
           android:layout_below="@id/accountPane"
           android:layout_marginTop="30dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">


           <RelativeLayout
               android:id="@+id/formatDateButton"
               android:layout_gravity="center_horizontal"
               android:layout_width="match_parent"
               android:layout_height="70dp"
               android:clickable="true"
               android:focusable="true"
               android:foreground="?attr/selectableItemBackground">
               <ImageView
                   android:layout_centerVertical="true"
                   android:id="@+id/formatDateIcon"
                   android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:src="@drawable/ic_calendar"
                   android:tint="@color/overlay"
                   android:layout_gravity="center_vertical"/>
               <TextView
                   android:layout_centerVertical="true"
                   android:id="@+id/formatDateText"
                   android:layout_toEndOf="@id/formatDateIcon"
                   android:layout_width="wrap_content"
                   android:layout_marginStart="30dp"
                   android:layout_height="wrap_content"
                   android:fontFamily="sans-serif"
                   android:textSize="15sp"
                   android:text="@string/formatDate"
                   android:textColor="@color/white"/>

               <ImageView
                   android:layout_centerVertical="true"
                   android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:tint="@color/overlay"
                   android:src="@drawable/ic_right"
                   android:layout_alignParentEnd="true"/>

           </RelativeLayout>


           <RelativeLayout
               android:id="@+id/reminderButton"
               android:layout_gravity="center_horizontal"
               android:layout_width="match_parent"
               android:layout_height="70dp"
               android:clickable="true"
               android:focusable="true"
               android:foreground="?attr/selectableItemBackground">
               <ImageView
                   android:layout_centerVertical="true"
                   android:id="@+id/reminderIcon"
                   android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:src="@drawable/ic_clock"
                   android:tint="@color/overlay"
                   android:layout_gravity="center_vertical"/>
               <TextView
                   android:layout_centerVertical="true"
                   android:id="@+id/reminderText"
                   android:layout_toEndOf="@id/reminderIcon"
                   android:layout_width="wrap_content"
                   android:layout_marginStart="30dp"
                   android:layout_height="wrap_content"
                   android:fontFamily="sans-serif"
                   android:textSize="15sp"
                   android:text="@string/reminder"
                   android:textColor="@color/white"/>

               <ImageView
                   android:layout_centerVertical="true"
                   android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:tint="@color/overlay"
                   android:src="@drawable/ic_right"
                   android:layout_alignParentEnd="true"/>

           </RelativeLayout>


           <RelativeLayout
               android:id="@+id/colorButton"
               android:layout_gravity="center_horizontal"
               android:layout_width="match_parent"
               android:layout_height="70dp"
               android:clickable="true"
               android:focusable="true"
               android:foreground="?attr/selectableItemBackground">
               <ImageView
                   android:layout_centerVertical="true"
                   android:id="@+id/colorIcon"
                   android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:src="@drawable/ic_brush"
                   android:tint="@color/overlay"
                   android:layout_gravity="center_vertical"/>
               <TextView
                   android:layout_centerVertical="true"
                   android:id="@+id/colorText"
                   android:layout_toEndOf="@id/colorIcon"
                   android:layout_width="wrap_content"
                   android:layout_marginStart="30dp"
                   android:layout_height="wrap_content"
                   android:fontFamily="sans-serif"
                   android:textSize="15sp"
                   android:text="@string/color"
                   android:textColor="@color/white"/>

               <ImageView
                   android:layout_centerVertical="true"
                   android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:tint="@color/overlay"
                   android:src="@drawable/ic_right"
                   android:layout_alignParentEnd="true"/>

           </RelativeLayout>



           <RelativeLayout
               android:id="@+id/helpButton"
               android:layout_gravity="center_horizontal"
               android:layout_width="match_parent"
               android:layout_height="70dp"
               android:clickable="true"
               android:focusable="true"
               android:layout_marginTop="30dp"
               android:foreground="?attr/selectableItemBackground">
               <ImageView
                   android:layout_centerVertical="true"
                   android:id="@+id/helpIcon"
                   android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:src="@drawable/ic_question"
                   android:tint="@color/overlay"
                   android:layout_gravity="center_vertical"/>
               <TextView
                   android:layout_centerVertical="true"
                   android:id="@+id/helpText"
                   android:layout_toEndOf="@id/helpIcon"
                   android:layout_width="wrap_content"
                   android:layout_marginStart="30dp"
                   android:layout_height="wrap_content"
                   android:fontFamily="sans-serif"
                   android:textSize="15sp"
                   android:text="@string/help"
                   android:textColor="@color/white"/>

               <ImageView
                   android:layout_centerVertical="true"
                   android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:tint="@color/overlay"
                   android:src="@drawable/ic_right"
                   android:layout_alignParentEnd="true"/>

           </RelativeLayout>


           <RelativeLayout
               android:clickable="true"
               android:focusable="true"
               android:id="@+id/logoutButton"
               android:layout_width="match_parent"
               android:layout_height="70dp"
               android:foreground="?attr/selectableItemBackground" >

               <ImageView
                   android:id="@+id/logoutIcon"
                   android:layout_alignParentStart="true"
                   android:layout_centerVertical="true"
                   android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:src="@drawable/ic_logout"
                   android:tint="@color/redAccent"/>
               <TextView
                   android:layout_toEndOf="@id/logoutIcon"
                   android:layout_centerVertical="true"
                   android:layout_marginStart="30dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:fontFamily="sans-serif"
                   android:textSize="15sp"
                   android:layout_gravity="center_vertical"
                   android:textColor="@color/redAccent"
                   android:text="@string/logout"/>

               <ImageView
                   android:layout_centerVertical="true"
                   android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:tint="@color/redAccent"
                   android:src="@drawable/ic_right"
                   android:layout_alignParentEnd="true"/>

           </RelativeLayout>
       </LinearLayout>
       <RelativeLayout
           android:id="@+id/accountPane"
           android:layout_below="@id/accountTitle"
           android:layout_marginTop="30dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="20dp">
           <LinearLayout
               android:id="@+id/infoRow"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerInParent="true"
               android:orientation="vertical">
               <ImageView
                   android:id="@+id/userAvatar"
                   android:layout_gravity="center_horizontal"
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:src="@drawable/ic_avatar"
                   android:background="@drawable/round_outline"/>
               <TextView
                   android:id="@+id/name_settings"
                   android:layout_marginTop="20dp"
                   android:layout_width="300dp"
                   android:layout_height="wrap_content"
                   android:fontFamily="sans-serif"
                   android:textSize="18sp"
                   android:text="@string/emailPH"
                   android:textAlignment="center"
                   android:textColor="@color/white"/>
               <Button
                   android:layout_marginTop="20dp"
                   android:layout_gravity="center_horizontal"
                   android:id="@+id/editInfoButton"
                   android:layout_width="wrap_content"
                   android:layout_height="40dp"
                   android:textAllCaps="false"
                   android:paddingHorizontal="15dp"
                   android:background="@drawable/authbtns"
                   android:fontFamily="sans-serif-light"
                   android:textSize="15sp"
                   android:foreground="?attr/selectableItemBackground"
                   android:textColor="@color/white"
                   android:text="@string/changeInfo"/>

           </LinearLayout>
       </RelativeLayout>
   </RelativeLayout>




</FrameLayout>