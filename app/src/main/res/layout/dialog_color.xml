<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/transaction_item"
    android:paddingHorizontal="30dp"
    android:animateLayoutChanges="true"
    android:paddingVertical="30dp">

    <TextView
        android:id="@+id/title_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chooseColor"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-medium"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textSize="22sp"/>


    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title_color"
        android:id="@+id/firstRow_color"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <View
            android:id="@+id/yellow_color"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/circle_yellow"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"/>

        <View
            android:id="@+id/blue_color"
            android:layout_marginStart="15dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/circle_blue"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"/>
        <View
            android:id="@+id/red_color"
            android:layout_marginStart="15dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/circle_red"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"/>
        <View
            android:id="@+id/green_color"
            android:layout_marginStart="15dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/circle_green"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"/>
        <View
            android:id="@+id/purple_color"
            android:layout_marginStart="15dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/circle_purple"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"/>

    </LinearLayout>


</RelativeLayout>