<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">
        <TextView
            android:id="@+id/utilitiesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textSize="30sp"
            android:text="@string/utilities"
            android:textColor="@color/white"
            android:layout_marginTop="70dp"
            android:layout_marginStart="20dp"/>



        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@id/utilitiesTitle"
            android:id="@+id/subUtilitiesRow"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <RelativeLayout
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/convertCurrencyButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:background="@drawable/authbtns">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_euro"
                        android:tint="@color/white"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/currencyConverter"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginStart="20dp">

                <RelativeLayout
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/calculateTaxButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:background="@drawable/authbtns">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_tax"
                        android:tint="@color/white"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/calculateTax"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginStart="20dp">

                <RelativeLayout
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/calculateProfitButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:background="@drawable/authbtns">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_profit"
                        android:tint="@color/white"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/calculateProfit"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:textSize="15sp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginStart="20dp">

                <RelativeLayout
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/exchangeMoneyButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:background="@drawable/authbtns">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_money_transfer"
                        android:tint="@color/white"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/exchangeMoney"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:textSize="15sp"/>

            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:paddingHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/subUtilitiesRow"
            android:id="@+id/mainUtilitiesRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/msSection"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:textSize="15sp"
                    android:text="@string/moneySource"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/moneySourcesCount_statistics"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:textSize="25sp"
                    android:text="0"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/manageMoneySourcesButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textSize="15sp"
                    android:layout_marginTop="15dp"
                    android:text="@string/manage"
                    android:layout_gravity="center_horizontal"
                    android:textColor="?colorAccent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_toEndOf="@id/msSection"
                android:layout_width="120dp"
                android:layout_marginStart="20dp"
                android:layout_height="120dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:textSize="15sp"
                    android:text="@string/specialTransaction"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/specialTransactionsCount_statistics"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:textSize="25sp"
                    android:text="0"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/manageSpecialTransactions_statistics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textSize="15sp"
                    android:layout_marginTop="15dp"
                    android:text="@string/manage"
                    android:layout_gravity="center_horizontal"
                    android:textColor="?colorAccent"/>

            </LinearLayout>

        </RelativeLayout>



        <TextView
            android:visibility="invisible"
            android:id="@+id/notificationTitle"
            android:layout_below="@id/subUtilitiesRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:text="@string/notification"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"/>

    </RelativeLayout>


</FrameLayout>