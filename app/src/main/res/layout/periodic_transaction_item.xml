<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:background="@drawable/transaction_item">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/icon_periodTransaction"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_category_gift"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/name_periodTransaction"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="@string/gift"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"/>
        <TextView
            android:id="@+id/time_periodTransaction"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="12:30 Hằng ngày"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"/>

        <TextView
            android:id="@+id/amount_periodTransaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/greenAccent"
            android:text="@string/moneyPlusPH"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif"/>
        <TextView
            android:id="@+id/moneySource_periodTransaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:text="@string/moneySourceNamePH"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-light"/>

    </LinearLayout>
</RelativeLayout>